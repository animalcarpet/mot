$this->headScript()->appendFile('/js/dvsa.js');

?>
    <form method="POST">
        <?php
        echo $this->csrfToken();

        if($form->getMessages()): ?>
            <div class="validation-summary" id="validation-summary-id">
                <h2>There was a problem with the information you entered:</h2>
                <ol>
                    <?php foreach($form->getElements() as $element): ?>
