                            <li>
                                <?php echo $this->escapeHtml($element->getLabel()); ?> -
                                <?php echo $this->escapeHtml($message); ?>
                            </li>
                        <?php endforeach; ?>
                    <?php endforeach; ?>
                </ol>
            </div>
        <?php endif;

        echo $this->partial(
            'partial/gds/general/password-criteria',
            [
                'username' => $username
            ]
        );
